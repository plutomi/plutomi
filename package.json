{
  "name": "plutomi",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/plutomi/plutomi.git",
  "author": "Jose Valerio <contact@josevalerio.com>",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "artillery": "^2.0.0-35",
    "cspell": "^6.31.1",
    "eslint": "^8.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-no-template-curly-in-string-fix": "^1.0.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^29.6.1",
    "nx": "15.8.9",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "4.9.5"
  },
  "scripts": {
    "test": "nx run-many -t test --parallel",
    "aws:login": "aws sso login --sso-session=plutomi",
    "dev": "nx run-many -t=dev",
    "build": "nx run-many -t=build",
    "start": "yarn workspace @plutomi/api start",
    "pretty": "yarn prettier --check .",
    "pretty:fix": "yarn prettier --write .",
    "lint": "nx run-many -t=lint --parallel",
    "lint:fix": "nx run-many -t=lint:fix --parallel",
    "tidy": "yarn pretty:fix && yarn lint:fix",
    "spellcheck": "yarn cspell .",
    "deploy:dev": "yarn workspace @plutomi/infra deploy:dev",
    "deploy:stage": "yarn workspace @plutomi/infra deploy:stage",
    "deploy:prod": "yarn workspace @plutomi/infra deploy:prod",
    "loadtest": "yarn artillery run loadtest.yml",
    "clean": "rimraf packages/*/node_modules packages/*/dist node_modules dist packages/infra/cdk.out packages/web/.next"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": { "axios": "^1.5.1" }
}
